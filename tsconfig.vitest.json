{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$services/*": ["src/lib/services/*"]
    }
  },
  "include": ["src", "vitest-setup.ts"]
}

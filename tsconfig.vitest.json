{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$services/*": ["src/lib/services/*"],
      "onnxruntime-web/wasm": ["tests/shims/onnxruntime-web-wasm.ts"],
      "onnxruntime-web": ["tests/shims/onnxruntime-web.ts"]
    }
  },
  "include": ["src", "tests", "vitest-setup.ts"]
}
